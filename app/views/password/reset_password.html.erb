<div class="title">Reset Password</div><br>
<%= flash[:notice] %>
<%= form_with url: "/password/reset_password", method: :post do |form| %>

<div class="field">
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
  </svg>
  <%= form.password_field :password, placeholder: 'Enter New Password', :maxlength=>"50" %><br>
</div><br>

<div class="field">
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
  </svg>
<%= form.password_field :password_confirmation, placeholder: 'Confirm New Password', :maxlength=>"50" %><br>
</div>

<div class="button input-box"><br>
  <%= form.submit "Reset Password" %><br>
</div>
<% end %>
